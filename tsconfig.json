{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,    
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "noLib": false,
    "baseUrl": "./",
    "rootDir": ".",
    "typeRoots": [ "node_modules/@types", "./typings.d.ts" ],
    "paths": {
      "@flow/*": [
        "./lib/*"
      ]

    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "compileOnSave": false,
}
